$(document).ready(function () {
  $("#newnumber").submit(function (event) {
      const sender = document.getElementById("nomor");
      const webhook = document.getElementById("webhook");
      let addnum = {
          nomor: sender.value,
          webhook: webhook.value,
      };
      
      $.ajax({
